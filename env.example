# General
APP_ENV_FILE=.env

# Azure OpenAI
AZURE_OPENAI_ENDPOINT="https://<your-resource>.openai.azure.com/"
AZURE_OPENAI_API_KEY="REEMPLAZAR"
AZURE_OPENAI_API_VERSION="2024-02-01"
AZURE_OPENAI_DEPLOYMENT_EMBED="text-embedding-3-large"
AZURE_OPENAI_DEPLOYMENT_CHAT="gpt-4o-mini"

# Azure Storage (Blob)
# Used to archive interview DOCX files and link them in printable reports.
# Format example:
# DefaultEndpointsProtocol=https;AccountName=<name>;AccountKey=<key>;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONNECTION_STRING=""

# Qdrant
QDRANT_URI="https://<cluster-id>.<region>.cloud.qdrant.io"
QDRANT_API_KEY="REEMPLAZAR"
QDRANT_COLLECTION="entrevistas"

# Neo4j
NEO4J_URI="neo4j+s://<id>.databases.neo4j.io"
NEO4J_USERNAME="neo4j"
NEO4J_PASSWORD="REEMPLAZAR"
NEO4J_DATABASE="neo4j"

# PostgreSQL
PGHOST="localhost"
PGPORT="5432"
PGUSER="postgres"
PGPASSWORD="REEMPLAZAR"
PGDATABASE="system_inv_sociocultural_v1"

# Embeddings
EMBED_DIMS=3072

# Feature flags
# Si true (default), al promover candidatos se sincroniza Neo4j (:Fragmento)-[:TIENE_CODIGO]->(:Codigo).
SYNC_NEO4J_ON_PROMOTE=true

# API Security
NEO4J_API_KEY="REEMPLAZAR"  # Utilizada por el backend FastAPI y el frontend
# Multi-tenant estricta para API Key (requerido si usas X-API-Key)
API_KEY_ORG_ID="default_org"
# Opcional: usuario y roles asociados a la API key
API_KEY_USER_ID="api-key-user"
API_KEY_ROLES="admin"
